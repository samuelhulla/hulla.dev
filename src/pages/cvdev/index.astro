    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.5rem 0.75rem;
    margin-top: 0.75rem;
    padding: 0.75rem;
    background-color: #f8fafc;
    border-radius: 4px;
    border-left: 2px solid var(--accent-color);
  }

  .skill-item {
    display: flex;
    align-items: center;
    padding: 0.2rem;
    border-radius: 3px;
    transition: background-color 0.2s;
  }

  .skill-item:hover {
