---
import type { HTMLAttributes } from 'astro/types'

export interface Props extends HTMLAttributes<'select'> {
  name: string
}

const { name, ...props } = Astro.props
---

<select
  class:list={[
    'cursor-pointer rounded-md bg-bg font-medium text-text shadow-sm ring-1 ring-inset focus:outline-none focus:ring-2 focus:ring-primary',
    'dark:bg-text dark:text-bg dark:ring-inset dark:ring-primary',
    props.class,
  ]}
  id={name}
  name={name}
  {...props}>
  <slot />
</select>
